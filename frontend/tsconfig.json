{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@/styles-modules/*": ["styles/modules/*"],
      "@/components-layout/*": ["components/layout/*"],
      "@/components-modules/*": ["components/modules/*"],
      "@/components-pages/*": ["components/pages/*"],
      "@/operations-mutations/*": ["operations/mutations/*"],
      "@/validations/*": ["validations/*"],
      "@/operations-queries/*": ["operations/queries/*"],
      "@/types-interfaces/*": ["types/interfaces/*"],
      "@/types-enums/*": ["types/enums/*"],
      "@/hooks/*": ["hooks/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "next.config.js", "jest.config.ts"],
  "exclude": ["node_modules"]
}
